use astro *
use healpix *
use st_facilities *
use ROOT v* IExternal

# SWIG interface
use SwigModule *
apply_pattern python_module

# instead of python_module
#apply_pattern shared_library
private

use embed_python * 

macro source "*.cxx" WIN32 "*.cxx *.h *.py"

# for numpy
macro_append use_includes " $(ppcmd) $(python_PATH)/Lib/site-packages/numpy/core/include" 

library skymaps \
 -s=../skymaps $(source) \
 -s=../src $(source) \
 -s=../python $(source)

application test_skymaps -s=test $(source)

macro swig_include "-I${skymaps_root}\
 -I${astro_root}\
 -I${healpix_root}\
 -I${CLHEPBASE}/include"


